Schedules<br/>
<%- @promotion_group_schedules.sort_by { |schedule| schedule.starts_at }.each do |schedule| %>
  Starts At: <%= Time.zone.parse(schedule.starts_at).strftime("%m/%d/%Y %l:%M%p") %> pacific
  &nbsp;
  <%= link_to "edit", "promotion_group_schedules/#{schedule.id}/edit", method: :get %>
  &nbsp;
  <%= link_to "delete", "promotion_group_schedules/#{schedule.id}", confirm: "sure?", method: :delete %>
  <br/>
<%- end%>

