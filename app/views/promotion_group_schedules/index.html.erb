New Schedule
<%= form_tag "/promotion_groups/#{@promotion_group_id}/promotion_group_schedules", method: :post do %>
  <%= label_tag :starts_at_date, "Starts at" %>
  <%= date_field_tag :starts_at_date %> <%= time_field_tag :starts_at_time %> pacific
  &nbsp;
  <%= check_box_tag :starts_at_date_tbd %>
  <%= label_tag :starts_at_date_tbd, "starts at date tbd" %>
  <%= check_box_tag :starts_at_time_tbd %>
  <%= label_tag :starts_at_time_tbd, "starts at time tbd" %>
  <%= check_box_tag :opens_at_date_tbd %>
  <%= label_tag :opens_at_date_tbd, "opens at date tbd" %>
  <%= check_box_tag :opens_at_time_tbd %>
  <%= label_tag :opens_at_time_tbd, "opens at time tbd" %>
  <%= select_tag :league, options_for_select(["NFL","MLB","NBA","NHL"]) %>
  &nbsp;
  <%= submit_tag "Add", id: "submitter" %>
  
<% end %>

<br/>
