  function add_prize() {
    // only add if last range is below current contest size
    // size = parseInt($("#size").val());
    // end = parseInt($("#prize_rows").children().last().children(".prize_range").children("#prize_table__end_place").val());

    prev_row = $(".prize_row").last()
    cloned_row = $(".prize_row").last().clone();

    // start place is based on prev row
    prev_end_place = parseInt(prev_row.children(".prize_range").children("#prize_table__end_place").val());
    cloned_row.children(".prize_range").children("#prize_table__start_place").val(prev_end_place+1);

    var description = cloned_row.children(".prize_options").children(".prize_option").children(".description_value").children("#prize_table_options__prize_description_override");
    reset_prize_description(description);


    cloned_row.appendTo($("#prize_rows"));


    prev_row.children(".prize_options").children().each(function(index) {
      selection = $(prev_row.children(".prize_options").children()[index]).children("#prize_table_options__prize_type").val();
      icon = $(prev_row.children(".prize_options").children()[index]).children("#prize_table_options__icon").val();
      $(cloned_row.children(".prize_options").children()[index]).children("#prize_table_options__prize_type").val(selection);
      $(cloned_row.children(".prize_options").children()[index]).children("#prize_table_options__icon").val(icon);
    });


    increment_prize_row_index(cloned_row);

    update_prize_places();
    cleanup_prize_add_delete();
  }

