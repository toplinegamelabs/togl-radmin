          validate();
        });
      } else {
        $("#entries_output").text("No Event Set Selected");
        $("#entries_output").append("<br/><br/>");
        $("#entries_output").css("color", "black");
      }
    } else {

      $("#entries_output").text("No User Selected");
      $("#entries_output").append("<br/><br/>");
      $("#entries_output").css("color", "black");
    }
  }

  function skip_entry_changed() {
