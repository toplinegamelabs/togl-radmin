        prize_table = [{
          "start_place" => 1,
          "end_place" => 1,
          "prizes" => [
            {
              "type" => "Cash",
              "value" => 100,
              "label" => "",
              "icon" => { "css_class" => "", "unicode" => "", "url" => "" }
            }
